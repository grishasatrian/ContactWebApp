@{
    ViewData["Title"] = "Contacts";
}
@model ContactViewModel;

@using (Html.BeginForm("Edit", "Contact", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ContactItem.ContactId)
    <div class=" shadow-lg card">
        <h5 class="card-header">Contacts information</h5>
        <div class=" card-body border-info">
            <h5 class="card-title">Full Name</h5>
            @Html.TextBoxFor(m => m.ContactItem.FullName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContactItem.FullName)
            <h5 class="card-title">Phone Number</h5>
            @Html.TextBoxFor(m => m.ContactItem.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContactItem.PhoneNumber)
            <h5 class="card-title">Email</h5>
            @Html.TextBoxFor(m => m.ContactItem.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContactItem.Email)
            <h5 class="card-title">Address</h5>
            @Html.TextBoxFor(m => m.ContactItem.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ContactItem.Address)
            <h5 class="card-title">Where to save?</h5>
            @Html.RadioButtonFor(m => m.IsSqlSelected, true) SQL
            @Html.RadioButtonFor(m => m.IsSqlSelected, false) JSON
            <div class="col">
                <div class="row">
                    <button type="button" data-toggle="modal" data-target="#exampleModalCenter" class="btn btn-outline-success" style="margin:5px;">Save changes</button>
                    <a class="btn btn-outline-dark" href="../Home/Contacts/" style="margin:5px;">Go Back</a>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Atention!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Save contact's changes?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" name="search" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>
}


